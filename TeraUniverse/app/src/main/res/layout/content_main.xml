<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.johna.terauniverse.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_marginLeft="94dp"
        android:layout_marginStart="94dp"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera"
        android:id="@+id/buttonInsta"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonCine"
        android:layout_alignLeft="@+id/buttonCine"
        android:layout_alignStart="@+id/buttonCine" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_sync_black_24dp"
        android:id="@+id/buttonImage"
        android:layout_alignBottom="@+id/buttonInsta"
        android:layout_alignLeft="@+id/buttonMaps"
        android:layout_alignStart="@+id/buttonMaps"
        android:layout_alignTop="@+id/buttonInsta"
        android:layout_alignRight="@+id/buttonMaps"
        android:layout_alignEnd="@+id/buttonMaps" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_slideshow"
        android:id="@+id/buttonMaps"
        android:elevation="0dp"
        android:layout_below="@+id/buttonFB"
        android:layout_toRightOf="@+id/buttonFB"
        android:layout_toEndOf="@+id/buttonFB" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_fb"
        android:layout_marginTop="74dp"
        android:id="@+id/buttonFB"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:background="@drawable/btn_fb"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_send"
        android:id="@+id/buttonCine"
        android:layout_below="@+id/buttonFB"
        android:layout_toLeftOf="@+id/buttonFB"
        android:layout_toStartOf="@+id/buttonFB" />

</RelativeLayout>
