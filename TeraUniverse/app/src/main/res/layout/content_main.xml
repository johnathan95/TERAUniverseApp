<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.johna.terauniverse.activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/splash_app4">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_insta"
        android:id="@+id/buttonInsta"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonCine"
        android:layout_alignLeft="@+id/buttonCine"
        android:layout_alignStart="@+id/buttonCine"
        android:background="@drawable/btn_insta" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_movie"
        android:id="@+id/buttonCine"
        android:background="@drawable/btn_movie"
        android:layout_alignTop="@+id/buttonSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_fb"
        android:layout_marginTop="70dp"
        android:id="@+id/buttonFB"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:background="@drawable/btn_fb"
        android:layout_below="@+id/home_msg"
        android:layout_toRightOf="@+id/buttonCine"
        android:layout_toEndOf="@+id/buttonCine"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_msg_text"
        android:id="@+id/home_msg"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonTwitter"
        android:layout_toStartOf="@+id/buttonTwitter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_twitter"
        android:id="@+id/buttonTwitter"
        android:background="@drawable/btn_twitter"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_below="@+id/buttonCine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_dwld"
        android:id="@+id/buttonDownload"
        android:background="@drawable/btn_dwld"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/buttonTwitter"
        android:layout_toRightOf="@+id/buttonYoutube"
        android:layout_toEndOf="@+id/buttonYoutube" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_youtube"
        android:id="@+id/buttonYoutube"
        android:background="@drawable/btn_youtube"
        android:layout_alignTop="@+id/buttonWeb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_web"
        android:id="@+id/buttonWeb"
        android:background="@drawable/btn_web"
        android:layout_below="@+id/buttonInsta"
        android:layout_toLeftOf="@+id/buttonYoutube"
        android:layout_toStartOf="@+id/buttonYoutube"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_save"
        android:id="@+id/buttonSave"
        android:elevation="0dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/btn_save"
        android:layout_alignTop="@+id/buttonFB"
        android:layout_toLeftOf="@+id/buttonTwitter"
        android:layout_toStartOf="@+id/buttonTwitter" />

</RelativeLayout>
